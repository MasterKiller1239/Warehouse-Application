<Window x:Class="Client.Views.Contractors.AddContractorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:vm="clr-namespace:Client.ViewModels.Contractors"
        Title="Add Contractor" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Symbol" />
        <TextBox Text="{Binding Symbol, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Text="Name" />
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Width="75" Margin="5,0" Command="{Binding AddCommand}" />
            <Button Content="Cancel" Width="75" Margin="5,0" Command="{Binding CancelCommand}" />
        </StackPanel>
    </StackPanel>
</Window>
