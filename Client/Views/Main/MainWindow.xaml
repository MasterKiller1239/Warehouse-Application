<Window x:Class="Client.Views.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warehouse Client" Height="350" Width="550"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Warehouse System"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20" />

        <UniformGrid Rows="1" Columns="2" Grid.Row="1" Margin="20">
            <Button Content="Dokumenty przyjęć"
                    FontSize="16"
                    Padding="10"
                    Margin="10"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="OpenDocumentsView"
                    />

            <Button Content="Kontrahenci"
                    FontSize="16"
                    Padding="10"
                    Margin="10"
                    Background="#2196F3"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="OpenContractorsView"
                    />
        </UniformGrid>
    </Grid>
</Window>
