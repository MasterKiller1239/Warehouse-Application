<Window x:Class="Client.Views.Documents.EditDocumentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Document" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Symbol:" Grid.Row="0" VerticalAlignment="Center" />
        <TextBox Grid.Row="0" Margin="70,0,0,0" Text="{Binding Document.Symbol, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Date:" Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,0" />
        <DatePicker Grid.Row="1" Margin="70,10,0,0" SelectedDate="{Binding Document.Date}" />

        <TextBlock Text="Contractor:" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,0" />
        <ComboBox Grid.Row="2" Margin="70,10,0,0" ItemsSource="{Binding Contractors}" SelectedItem="{Binding SelectedContractor}" DisplayMemberPath="Name" />

        <Button Grid.Row="3" Content="Update" Margin="0,20,0,0" Width="100" HorizontalAlignment="Left" Command="{Binding UpdateCommand}" />
    </Grid>
</Window>
