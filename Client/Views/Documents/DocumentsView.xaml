<Window x:Class="Client.Views.Documents.DocumentsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Documents" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="Add Document" Command="{Binding AddDocumentCommand}" Margin="5"/>
            <Button Content="Edit Document" Command="{Binding EditDocumentCommand}" Margin="5"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding Documents}" SelectedItem="{Binding SelectedDocument}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Symbol" Width="150" DisplayMemberBinding="{Binding Symbol}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="Symbol" Cursor="Hand" MouseLeftButtonUp="GridViewColumnHeader_Click"/>
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Date" Width="150" DisplayMemberBinding="{Binding Date}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="Date" Cursor="Hand" MouseLeftButtonUp="GridViewColumnHeader_Click"/>
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Contractor" Width="200" DisplayMemberBinding="{Binding ContractorName}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="Contractor" Cursor="Hand" MouseLeftButtonUp="GridViewColumnHeader_Click"/>
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Row="2" Content="View Details" Command="{Binding OpenDetailsCommand}" HorizontalAlignment="Right" Margin="0,10,0,0" />
    </Grid>
</Window>
